<%- include('../include/head.ejs') %>
<%- include('../include/navigation.ejs') %>

<section class="container section mb-6">
  <h1 class="heading-lg mb-4"><%= pageTitle %></h1>

  <form class="form" action="/prodavnica/potvrdite-porudzbinu" method="post">
    <input class="form__input" type="hidden" name="CSRFToken" value="<%= csrfToken %>">
    <input class="form__input" type="hidden" name="token" value="<%= token %>">
    <input name="honeypot" type="hidden">

    <div class="form__group form__group--block">
      <p class="text-md text-muted">Klikom na dugme potvrđujete porudžbinu</p>
      <button class="button button--primary w-full" type="submit">Potvrdite Porudžbinu</button>
    </div>

    <% if (errorMessage) { %>
      <div class="form__error text-danger mt-2"><%= errorMessage %></div>
    <% } %>
  </form>
</section>

<%- include('../include/end.ejs') %>
