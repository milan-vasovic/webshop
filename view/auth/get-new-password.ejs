<%- include('../include/head.ejs') %>
<%- include('../include/navigation.ejs') %>

<main class="section container min-h-screen flex flex-column justify-center">
  <h1 class="heading-xl mb-6"><%= pageTitle %></h1>

  <form class="form max-w-md mx-auto" action="/zatrazite-novu-sifru" method="post">
    <div class="form__group">
      <label for="email" class="form__label">Email</label>
      <input
        class="form__input"
        id="email"
        name="email"
        type="email"
        value="<%= existingData?.email || '' %>"
        required
      />
    </div>

    <input type="hidden" name="CSRFToken" value="<%= csrfToken %>" />
    <input type="hidden" name="honeypot" />

    <button class="button button--primary mt-4" type="submit">ZatraÅ¾ite Promenu Lozinke</button>

    <% if (errorMessage) { %>
      <div class="form__error mt-2"><%= errorMessage %></div>
    <% } %>
  </form>
</main>

<%- include('../include/end.ejs') %>
