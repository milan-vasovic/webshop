<%- include('../include/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<%- include('../include/navigation.ejs') %>
<section class="main__container">
    <div class="main-form__container">
        <h1 class="main-form__title"><%= pageTitle %></h1>
        <form class="main-form" action="/zatrazite-novu-sifru" method="post">
            <div class="main-form__group">
                <label class="main-form__label" for="email">Email:</label>
                <input class="main-form__input" id="email" name="email" type="email" <% if (existingData) { %>value='<%= existingData.email %>'<% } %> required>
            </div>
            <input class="main-form__input" type="hidden" name="CSRFToken" value="<%= csrfToken %>">
            <input name="honeypot" type="hidden">
            <button class="btn-primary" type="submit">Zatra≈æite Promenu Lozinke</button>
            <% if (errorMessage) { %>
                <div class="user-message--error"><%= errorMessage %></div>
            <% } %>
        </form>
    </div>
</section>
<%- include('../include/end.ejs') %>