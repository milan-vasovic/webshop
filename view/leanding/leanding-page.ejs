<%- include('../include/head.ejs') %>
<%- include('../include/navigation.ejs') %>

<section class="main__container section container">
  <!-- Hero Section -->
  <div class="section">
    <%- include('../include/hero.ejs', {
      orientation: "left-right",
      title: "Dobrodošli u Tophelanke",
      subtitle: "Vaša destinacija za savremenu žensku garderobu",
      paragraphs: [
        "Otkrijte ogroman asortiman helanki trenerki fitness kompleta kupaćih majica šorceva haljina kardigana jakni i još mnogo toga!",
        "Pažljivo odabrani artikli kako bi svaka žena pronašla svoj savršen stil.",
        "Sa veličinama od XS do 4XL, garantujemo izuzetan kvalitet i moderno rešenje za svaku priliku i godišnje doba."
      ],
      ctaLink: "/prodavnica",
      ctaText: "Posetite prodavnicu",
      imageSrc: "/images/tophelanke_hero.jpg",
      imageAlt: "tophelanke hero helanke prodavnica"
    }) %>
  </div>

  <!-- Policies Section -->
  <div class="section">
    <div class="grid grid-2 grid-md-5 gap-4 text-center">
      <%- include('../include/circularBadge.ejs', { title: "Brza Dostava", text: "Post Express", icon: "local_shipping" }) %>
      <%- include('../include/circularBadge.ejs', { title: "Garancija Zamene", text: "U roku od 14 dana, bez pitanja.", icon: "sync_alt" }) %>
      <%- include('../include/circularBadge.ejs', { title: "Povrata Novca", text: "U roku od 14 dana, bez pitanja.", icon: "currency_exchange" }) %>
      <%- include('../include/circularBadge.ejs', { title: "Sigurna Kupovina", text: "Vaši podaci su enkriptovani i bezbedni.", icon: "lock" }) %>
      <%- include('../include/circularBadge.ejs', { title: "Lako Dostupni", text: "Forma, email ili telefon.", icon: "contact_support" }) %>
      <%- include('../include/circularBadge.ejs', { title: "Istorija", text: "Pratite istoriju poručivanja", icon: "history" }) %>
    </div>
  </div>

  <!-- Featured Products Section -->
  <div class="section">
    <h2 class="heading-lg mb-4">Istaknuto iz Ponude</h2>
    <div class="cards__container">
      <% featuredItems.forEach(item => { %>
        <%- include('../include/card.ejs', {
            item: item,
            hasActions: true,
            actions: [
                {
                    type: 'link-name',
                    link: "/prodavnica/artikal/",
                    linkName: 'Pogledajte'
                }
            ],
            showId: false
        }) %>
      <% }) %>
    </div>
  </div>

  <!-- Testimonials Section -->
  <div class="section">
    <h2 class="heading-lg mb-4">Šta kažu naše klijentkinje</h2>
    <div class="grid grid-1 grid-md-3 gap-4">
      <%- include('../include/testimonialCard.ejs', { image: "/images/tophelanke_logo.png", name: "Eleonora V.", rating: 5, text: "Odlična usluga, brza dostava i kvalitetni proizvodi. Preporučujem svima!" }) %>
      <%- include('../include/testimonialCard.ejs', { image: "/images/tophelanke_logo.png", name: "Teodora M.", rating: 5, text: "Sve pohvale za brzu dostavu i kvalitet proizvoda. Jako sam zadovoljna!" }) %>
      <%- include('../include/testimonialCard.ejs', { image: "/images/tophelanke_logo.png", name: "Ana P.", rating: 5, text: "Sve je bilo super, veličina nije odgovarala, uspešno i lako je urađena zamena." }) %>
    </div>
  </div>

  <!-- Sale Items Section -->
  <div class="section">
    <h2 class="heading-lg mb-4">Na Akciji</h2>
    <div class="cards__container">
      <% actionItems.forEach(item => { %>
        <%- include('../include/card.ejs', {
            item: item,
            hasActions: true,
            actions: [
                {
                    type: 'link-name',
                    link: "/prodavnica/artikal/",
                    linkName: 'Pogledajte'
                }
            ],
            showId: false
        }) %>
      <% }) %>
    </div>
  </div>

  <!-- Blog Section -->
  <div class="section">
    <h2 class="heading-lg mb-4">Najnovije sa Foruma</h2>
    <div class="cards__container">
      <% forumPosts.posts.forEach(item => { %>
        <%- include('../include/card.ejs', {
            item: item,
            showId: false,
            hasActions: true,
            actions: [
              {
                type: 'link-name',
                link: "/objava/",
                linkName: 'Pogledajte'
              }
            ]
        }) %>
      <% }) %>
    </div>
  </div>

  <!-- CTA Section -->
  <section class="section cta-partner bg-accent text-white rounded-lg p-6">
    <div class="cta-partner__container">
      <div class="cta-partner__text">
        <h2 class="heading-lg">Program Partnerstva</h2>
        <p>Uskoro više o programu partnerstva – prijavite se na naš newsletter za buduće informacije!</p>
      </div>
      <div class="cta-partner__form">
        <%- include('../include/newsletter.ejs', { from: path }) %>
      </div>
    </div>
  </section>

</section>

<%- include('../include/end.ejs') %>
