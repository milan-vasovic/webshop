
<% /*
  Parametri koje ova hero sekcija prima (mogu biti definisani u kontroleru ili u glavnom EJS fajlu):
  - orientation: string â€“ "left-right", "right-left", "top-bottom", "bottom-top"
  - title: string
  - subtitle: string
  - paragraphs: array of strings
  - ctaLink: string
  - ctaText: string
  - imageSrc: string
  - imageAlt: string
*/ %>
<div class="hero hero--<%= orientation %>">
  <div class="hero__content">
    <% if (title) { %><h1 class="hero__title"><%= title %></h1><% } %>
    <% if (subtitle) { %><h2 class="hero__subtitle"><%= subtitle %></h2><% } %>
    <% if (paragraphs?.length) { %>
      <% paragraphs.forEach(par => { %>
        <p class="hero__paragraph"><%= par %></p>
      <% }) %>
    <% } %>
    <% if (ctaLink && ctaText) { %>
      <a href="<%= ctaLink %>" class="btn-primary hero__cta"><%= ctaText %></a>
    <% } %>
  </div>

  <div class="hero__image">
    <img src="<%= imageSrc %>" alt="<%= imageAlt %>">
  </div>
</div>

