<div class="card__container card__container--testimonial">
  <!-- Header: Image and Name -->
  <div class="card__header card__header--testimonial">
    <% if (image) { %>
      <div class="testimonial__image">
        <img src="<%= image %>" alt="<%= name || 'User' %>">
      </div>
    <% } %>
    <% if (name) { %>
      <div class="testimonial__name"><%= name %></div>
    <% } %>
  </div>

  <!-- Content: Stars and Text -->
  <div class="card__content card__content--testimonial">
    <div class="testimonial__stars">
      <% 
        const maxStars = 5;
        let validRating = rating && rating > 0 ? rating : 0;
        if (validRating > maxStars) { validRating = maxStars; }
      %>
      <% for (let i = 1; i <= maxStars; i++) { %>
        <span class="testimonial__star <%= i <= validRating ? 'testimonial__star--filled' : '' %>">â˜…</span>
      <% } %>
    </div>
    <div class="testimonial__text"><%= text %></div>
  </div>
</div>
<script src="/js/testemonialSlider.js"></script>