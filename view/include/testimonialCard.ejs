<%
  // Parametri:
  // image (string): putanja do slike (npr. /images/user.jpg)
  // name (string): ime korisnika
  // rating (number): broj zvezdica (1–5)
  // text (string): tekst recenzije
%>

<div class="testimonial-card">
  <% if (image) { %>
    <img class="testimonial-card__image" src="<%= image %>" alt="<%= name || 'User' %>">
  <% } %>

  <% if (name) { %>
    <div class="testimonial-card__name"><%= name %></div>
  <% } %>

  <% if (rating) { %>
    <div class="testimonial__stars">
      <% const maxStars = 5; %>
      <% for (let i = 1; i <= maxStars; i++) { %>
        <span class="testimonial__star <%= i <= rating ? 'testimonial__star--filled' : '' %>">★</span>
      <% } %>
    </div>
  <% } %>

  <% if (text) { %>
    <div class="testimonial-card__text"><%= text %></div>
  <% } %>
</div>
