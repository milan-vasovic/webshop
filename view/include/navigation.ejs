<!-- Creat navigation that is mobile responsive and have checks for isAuth and isAdmin -->
</head>
<body>
    <div class="backdrop"></div>
    <header class="main-header">
        <button class="btn" id="side-menu-toggle">Meni</button>
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Početna</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/prodavnica' ? 'active' : '' %>" href="/prodavnica">Prodavnica</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/partnerstvo' ? 'active' : '' %>" href="/partnerstvo">Partnerstvo</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/kontakt' ? 'active' : '' %>" href="/kontakt">Kontakt</a>
                </li>

                <% if (isAuthenticated) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/moj-profil' ? 'active' : '' %>" href="/moj-profil">Moj Profil</a>
                    </li>
                    <% if (role === "partner") { %>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/doajte-artikal' ? 'active' : '' %>" href="/admin/dodajte-artikal">Partner Profil</a>
                        </li>
                    <% } %>
                    <% if (role === "admin") { %>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/artikli' ? 'active' : '' %>" href="/admin/artikli">Admin Artikli</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/doajte-artikal' ? 'active' : '' %>" href="/admin/dodajte-artikal">Dodajte Artikal</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/korisnici">Admin Korisnici</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/kuponi' ? 'active' : '' %>" href="/admin/kuponi">Admin Kuponi</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/doajte-kupon' ? 'active' : '' %>" href="/admin/dodajte-kupon">Dodajte Kupon</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/porudzbine' ? 'active' : '' %>" href="/admin/porudzbine">Porudžbine</a>
                        </li>
                    <% } %>
                <% } %>
            </ul>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/prodavnica/korpa' ? 'active' : '' %>" href="/prodavnica/korpa">Korpa</a>
                </li>
                <% if (!isAuthenticated) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/prijava' ? 'active' : '' %>" href="/prijava">Prijava</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/registracija' ? 'active' : '' %>" href="/registracija">Registracija</a>
                    </li>
                <% } else { %>
                    <li class="main-header__item">
                        <form action="/odjava" method="POST">
                            <input name="honeypot" type="hidden">
                            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                            <button class="btn" type="submit">Odjava</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </nav>
        <nav class="mobile-nav">
            <ul class="mobile-nav__item-list">
                <% if (!isAuthenticated) { %>
                    <li class="mobile-nav__item">
                        <a class="<%= path === '/prijava' ? 'active' : '' %>" href="/prijava">Prijava</a>
