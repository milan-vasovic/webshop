                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/kuponi' ? 'active' : '' %>" href="/admin/kuponi">Admin Kuponi</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/dodajte-kupon' ? 'active' : '' %>" href="/admin/dodajte-kupon">Dodajte Kupon</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/porudzbine' ? 'active' : '' %>" href="/admin/porudzbine">Porudžbine</a>
                        </li>
                    <% } %>
                <% } %>
                <hr>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/uslovi-koriscenja' ? 'active' : '' %>" href="/uslovi-koriscenja">Uslovi Korišćenja</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/politika-privatnosti' ? 'active' : '' %>" href="/politika-privatnosti">Politika Privatnosti</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/o-nama' ? 'active' : '' %>" href="/o-nama">O Nama</a>
                </li>             
                <hr>
            </ul>
        </nav>
    </header>