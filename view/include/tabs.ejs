<div class="tabs__container">
  <!-- Tab buttons -->
  <div class="tabs__header">
    <% tabsData.forEach((tab, index) => { %>
      <button 
        class="tabs__btn <%= index === 0 ? 'active' : '' %>" 
        data-tab="<%= index %>">
        <%= tab.title %>
      </button>
    <% }); %>
  </div>

  <!-- Tab content blocks -->
  <div class="tabs__content">
    <% tabsData.forEach((tab, index) => { %>
      <div class="tabs__panel <%= index === 0 ? 'active' : '' %>" data-tab="<%= index %>">
        <% if (tab.type === 'table') { %>
          <%- include('../include/table.ejs', {
              items: tab.data,
              showId: true,
              caption: tab.title,
              hasActions: false,
              hasFooter: false,
              totals: false,
              actions: []
          }) %>
        <% } else if (tab.type === 'card') { %>
          <%- include('../include/card.ejs', {
              item: tab.data,
              hasActions: false,
              actions: [],
              showId: false
          }) %>
        <% } else { %>
          <p>Unsupported content type for "<%= tab.title %>".</p>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>
