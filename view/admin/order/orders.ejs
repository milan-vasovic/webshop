<%- include('../../include/head.ejs') %>
<%- include('../../include/navigation.ejs') %>

<section class="container section main__container">
  <h1 class="main__title"><%= pageTitle %></h1>

  <form class="form mb-4" action="/admin/porudzbine/pretraga" method="post">
    <div class="form__group">
      <label class="form__label" for="search">Pretraga porud탑bina:</label>
      <input class="form__input" id="search" type="text" name="search" placeholder="Unesite broj, ime ili status porud탑bine">
    </div>
    <input type="hidden" name="honeypot">
    <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
    <button type="submit" class="button button--secondary">Pretra탑i</button>
  </form>

  <%- include('../../include/table.ejs', {
    items: orders.orders,
    showId: true,
    caption: "Porud탑bine",
    hasActions: true,
    hasFooter: false,
    totals: false,
    actions: [
      {
        type: 'link',
        link: "/admin/porudzbina-detalji/",
        linkName: 'visibility'
      }
    ]
  }) %>

  <%- include('../../include/pagination.ejs', {
    currentPage: currentPage,
    totalPages: totalPages,
    basePath: basePath
  }) %>
</section>

<%- include('../../include/end.ejs') %>
